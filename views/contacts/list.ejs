<%- include('../partials/header') %>
<% const startIndex = ((typeof currentPage !== 'undefined' ? currentPage : 1) - 1) * (perPage || contacts.length); %>

<!-- Header Section -->
<div class="mb-5">
  <div class="row align-items-center g-3">
    <div class="col-12 col-sm-auto">
      <h1 class="mb-0" style="font-size: 2.5rem; font-weight: 700; color: #2c3e50;">ğŸ“‡ My Contacts</h1>
      <p class="text-muted mt-2">Total contacts: <strong><%= totalCount %></strong></p>
    </div>
    <div class="col-12 col-sm-auto ms-sm-auto">
      <button id="syncBtn" class="btn btn-gradient w-100 w-sm-auto" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; padding: 10px 20px; font-weight: 600;">
        ğŸ“¥ Import From Google Sheet
      </button>
    </div>
  </div>
  <hr class="my-4" style="border-color: #e8e8e8;">
</div>

<!-- Desktop Table View -->
<div class="d-none d-lg-block">
  <div class="card shadow" style="border: none; border-radius: 15px; overflow: hidden; border-top: 4px solid #667eea;">
    <div class="table-responsive">
      <table class="table mb-0" style="margin: 0;">
        <thead>
          <tr style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <th style="width:60px; font-weight: 700; padding: 18px 15px; border: none;">No.</th>
            <th style="font-weight: 700; padding: 18px 15px; border: none;">ğŸ‘¤ Name</th>
            <th style="font-weight: 700; padding: 18px 15px; border: none;">ğŸ“± Phone</th>
            <th style="font-weight: 700; padding: 18px 15px; border: none;">ğŸ“ Last Call</th>
            <th style="font-weight: 700; padding: 18px 15px; border: none;">ğŸ“ Notes</th>
            <th style="font-weight: 700; padding: 18px 15px; border: none; text-center;">âš¡ Actions</th>
          </tr>
        </thead>
        <tbody>
        <% contacts.forEach(function(c, idx){ %>
          <% var phoneLink = (c.phone || '').toString().replace(/\D/g, ''); %>
          <tr style="border: none; padding: 0; transition: all 0.3s ease; <%= idx % 2 === 0 ? 'background-color: #f8f9fc;' : 'background-color: #ffffff;' %>" class="table-row-hover">
            <td style="padding: 16px 15px; vertical-align: middle; border: none;">
              <span class="badge" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 0.85rem; padding: 6px 10px; font-weight: 700;"><%= startIndex + idx + 1 %></span>
            </td>
            <td style="padding: 16px 15px; vertical-align: middle; border: none;">
              <a href="/contacts/<%= c._id %>" class="text-decoration-none" style="color: #2c3e50;">
                <strong style="font-size: 1.05rem; display: block;">
                  <%= c.name %>
                </strong>
                <small style="color: #95a5a6;">Contact ID: <%= c._id.toString().substring(0, 8) %>...</small>
              </a>
            </td>
            <td style="padding: 16px 15px; vertical-align: middle; border: none;">
              <a href="tel:<%= c.phone %>" class="text-decoration-none" style="color: #667eea; font-weight: 600; font-size: 1rem;">
                <%= c.phone %>
              </a>
            </td>
            <td style="padding: 16px 15px; vertical-align: middle; border: none;">
              <% if (c.lastCallAt) { %>
                <span style="background: #d4edda; color: #155724; padding: 6px 12px; border-radius: 20px; font-weight: 600; font-size: 0.9rem; display: inline-block;">
                  âœ“ <%= new Date(c.lastCallAt).toLocaleString() %>
                </span>
              <% } else { %>
                <span style="background: #fff3cd; color: #856404; padding: 6px 12px; border-radius: 20px; font-weight: 600; font-size: 0.9rem; display: inline-block;">
                  â³ No calls
                </span>
              <% } %>
            </td>
            <td style="padding: 16px 15px; vertical-align: middle; border: none;">
              <span class="badge" style="background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); font-size: 0.9rem; padding: 8px 12px; font-weight: 700;">
                <%= c.notesCount || 0 %>
              </span>
            </td>
            <td style="padding: 16px 15px; vertical-align: middle; border: none; text-center;">
              <div class="btn-group" role="group" style="display: flex; gap: 6px; justify-content: center;">
                <button class="btn btn-sm call-btn" data-id="<%= c._id %>" data-phone="<%= c.phone %>" title="Call" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white; border-radius: 8px; padding: 8px 12px; font-weight: 600; transition: all 0.2s ease;">ğŸ“ Call</button>
                <a class="btn btn-sm" href="/contacts/<%= c._id %>" title="Details" style="background: #e8eef7; color: #667eea; border: none; border-radius: 8px; padding: 8px 12px; font-weight: 600; transition: all 0.2s ease;">ğŸ‘ï¸ View</a>
                <a class="btn btn-sm" href="https://wa.me/<%= phoneLink %>?text=<%= encodeURIComponent('Hi ' + (c.name || '') ) %>" target="_blank" rel="noopener" title="WhatsApp" style="background: #d4f1d4; color: #155724; border: none; border-radius: 8px; padding: 8px 12px; font-weight: 600; transition: all 0.2s ease;">ğŸ’¬ Chat</a>
              </div>
            </td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .table-row-hover:hover {
    background-color: #eeefff !important;
    box-shadow: inset 0 0 10px rgba(102, 126, 234, 0.1);
  }
  .table-row-hover td {
    transition: all 0.2s ease;
  }
  .table-row-hover:hover td {
    color: #667eea;
  }
</style>

<!-- Mobile List View -->
<div class="d-lg-none">
  <div id="contactsMobileList" class="list-group list-group-flush">
    <% contacts.forEach(function(c, idx){ %>
      <% var phoneLink = (c.phone || '').toString().replace(/\D/g, ''); %>
      <div class="list-group-item d-flex align-items-start" style="padding: 12px 10px; border-bottom: 1px solid #f0f2fb;">
        <div style="width:42px; flex:0 0 42px; display:flex; align-items:center; justify-content:center;">
          <span class="mobile-index" style="background: linear-gradient(135deg, #6f59e6 0%, #a46de6 100%); color: white; width:34px; height:34px; display:inline-flex; align-items:center; justify-content:center; border-radius:8px; font-weight:700;"> <%= startIndex + idx + 1 %> </span>
        </div>

        <div style="flex:1 1 auto; min-width:0; margin-left:10px;">
          <a href="/contacts/<%= c._id %>" class="text-decoration-none" style="color: #1f2d3d; font-weight:700; display:block; font-size:0.98rem;"><%= c.name %></a>
          <div class="d-flex align-items-center justify-content-between" style="margin-top:6px; gap:10px;">
            <a href="tel:<%= c.phone %>" class="text-decoration-none" style="color: #2b7be4; font-weight:600; font-size:0.92rem;"><%= c.phone %></a>
            <div style="display:flex; align-items:center; gap:8px;">
              <% if (c.lastCallAt) { %>
                <span class="mobile-lastcall" style="background:#fff3cd; color:#856404; padding:6px 10px; border-radius:14px; font-weight:700; font-size:0.8rem;">â³ <%= new Date(c.lastCallAt).toLocaleDateString() %></span>
              <% } else { %>
                <span class="mobile-lastcall" style="background:#fff3cd; color:#856404; padding:6px 10px; border-radius:14px; font-weight:700; font-size:0.8rem;">â³ No calls</span>
              <% } %>
              <span class="mobile-notes" style="background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); color:white; padding:6px 8px; border-radius:8px; font-weight:700; font-size:0.82rem;"><%= c.notesCount || 0 %></span>
            </div>
          </div>
          <small style="color:#95a5a6; display:block; margin-top:6px;">Contact ID: <%= c._id.toString().substring(0,8) %>...</small>
        </div>

        <div class="btn-actions-mobile" style="flex:0 0 auto; margin-left:12px; display:flex; flex-direction:column; gap:6px; min-width:fit-content;">
          <button class="btn mobile-action call-btn" data-id="<%= c._id %>" data-phone="<%= c.phone %>" style="background: linear-gradient(135deg, #6f59e6 0%, #a46de6 100%); border:none; color:white; padding:6px 10px; border-radius:8px; font-weight:700; font-size:0.85rem; white-space:nowrap;">ğŸ“ Call</button>
          <a class="btn mobile-action" href="/contacts/<%= c._id %>" style="background:#eef3ff; color:#3b3f56; padding:6px 10px; border-radius:8px; text-decoration:none; font-size:0.85rem; white-space:nowrap; text-align:center;">ğŸ‘ï¸ View</a>
          <a class="btn mobile-action" href="https://wa.me/<%= phoneLink %>?text=<%= encodeURIComponent('Hi ' + (c.name || '') ) %>" target="_blank" rel="noopener" style="background:#dff6e8; color:#155724; padding:6px 10px; border-radius:8px; text-decoration:none; font-size:0.85rem; white-space:nowrap; text-align:center;">ğŸ’¬ Chat</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% if (totalPages && totalPages > 1) { %>
  <!-- Desktop / Tablet: full numeric pagination -->
  <nav aria-label="Contacts pagination" class="mt-5 d-none d-sm-block">
    <ul class="pagination justify-content-center flex-wrap">
      <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= Math.max(1, currentPage - 1) %>" tabindex="-1" style="border-radius: 8px; margin: 0 3px;">â¬…ï¸ Previous</a>
      </li>
      <% for (let p = 1; p <= totalPages; p++) { %>
        <li class="page-item <%= p === currentPage ? 'active' : '' %>" style="margin: 0 3px;">
          <a class="page-link" href="?page=<%= p %>" style="border-radius: 8px; <%= p === currentPage ? 'background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white;' : '' %>"><%= p %></a>
        </li>
      <% } %>
      <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= Math.min(totalPages, currentPage + 1) %>" style="border-radius: 8px; margin: 0 3px;">Next â¡ï¸</a>
      </li>
    </ul>
  </nav>

  <!-- Mobile: compact pagination with Prev/Next and page indicator -->
  <nav aria-label="Contacts pagination" class="mt-4 d-block d-sm-none">
    <ul class="pagination justify-content-center">
      <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= Math.max(1, currentPage - 1) %>" tabindex="-1" style="border-radius: 8px;">Prev</a>
      </li>
      <li class="page-item disabled align-self-center mx-3">
        <span class="badge bg-primary" id="mobilePageIndicator" style="font-size: 0.95rem; padding: 8px 12px;">Page <%= currentPage %> / <%= totalPages %></span>
      </li>
      <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= Math.min(totalPages, currentPage + 1) %>" style="border-radius: 8px;">Next</a>
      </li>
    </ul>
  </nav>
<% } %>

<% if (contacts.length === 0) { %>
  <div class="alert alert-info text-center py-5" style="border-radius: 12px; border: 2px dashed #667eea; background: #f0f4ff;">
    <h4 style="color: #667eea; margin-bottom: 15px;">ğŸ“­ No Contacts Yet</h4>
    <p class="mb-0">Get started by adding your first contact!</p>
    <a href="/contacts/add" class="btn btn-primary mt-3" style="border-radius: 8px; padding: 10px 30px; font-weight: 600;">â• Add First Contact</a>
  </div>
<% } %>

<style>
  .btn-gradient {
    color: white !important;
    transition: transform 0.2s ease;
  }
  .btn-gradient:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.4);
  }
  .card {
    transition: all 0.3s ease;
  }
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1) !important;
  }
  table tr:hover {
    background-color: #f8f9fa;
  }
  .btn {
    transition: all 0.2s ease;
  }
  .btn:hover {
    transform: translateY(-2px);
  }
  .badge {
    font-weight: 600;
  }

  /* Responsive Mobile Adjustments */
  @media (max-width: 576px) {
    .list-group-item {
      flex-wrap: wrap !important;
    }
    .btn-actions-mobile {
      width: 100% !important;
      margin-left: 0 !important;
      margin-top: 8px;
      flex-direction: row !important;
      flex-wrap: wrap;
    }
    .btn-actions-mobile .btn {
      flex: 1 1 calc(33.333% - 6px);
      min-width: 60px;
      padding: 6px 6px !important;
      font-size: 0.78rem !important;
    }
  }

  @media (min-width: 577px) and (max-width: 991px) {
    .list-group-item {
      padding: 12px 8px !important;
    }
    .btn-actions-mobile {
      gap: 4px !important;
    }
    .btn-actions-mobile .btn {
      padding: 6px 8px !important;
      font-size: 0.82rem !important;
    }
  }

  @media (min-width: 992px) {
    /* Desktop view - table already optimized */
    .table-responsive {
      overflow-x: auto;
    }
  }
</style>

<script>
  window.contactPagination = {
    currentPage: <%= typeof currentPage !== 'undefined' ? currentPage : 1 %>,
    totalPages: <%= typeof totalPages !== 'undefined' ? totalPages : 1 %>,
    perPage: <%= typeof perPage !== 'undefined' ? perPage : 70 %>
  };
</script>

<%- include('../partials/footer') %>
